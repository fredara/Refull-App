---
import OptimizedImage from './OptimizedImage.astro';

export interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  className?: string;
}

const { size = 'md', className = '' } = Astro.props;

const sizeClasses = {
  sm: 'w-8 h-8',
  md: 'w-12 h-12', 
  lg: 'w-16 h-16',
  xl: 'w-24 h-24'
};

const sizeMap = {
  sm: 32,
  md: 48,
  lg: 64,
  xl: 96
};
---

<OptimizedImage 
  src="/Refull-App/images/logod.png" 
  alt="DIKU Isotipo" 
  className={`${sizeClasses[size]} ${className}`}
  width={sizeMap[size]}
  height={sizeMap[size]}
  loading="lazy"
/>
