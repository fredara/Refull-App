  </div>
</div>

<style>
  .help-to-use-section {
    position: relative;
    overflow: hidden;
  }
  
  .help-to-use-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 77, 77, 0.9) 0%, rgba(255, 69, 0, 0.9) 100%);
    z-index: 1;
  }
  
  .help-to-use-section > * {
    position: relative;
    z-index: 2;
  }
  
  /* Animación sutil para los botones */
  .help-to-use-section a {
    transform: translateY(0);
    transition: all 0.3s ease;
  }
  
  .help-to-use-section a:hover {
    transform: translateY(-2px);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .help-to-use-section {
      padding: 2rem 0;
    }
    
    .help-to-use-section h2 {
      font-size: 1.5rem;
    }
    
    .help-to-use-section p {
      font-size: 1rem;
    }
  }
</style>
