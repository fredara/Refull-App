---
import OptimizedImage from './ui/OptimizedImage.astro';
---

<!-- Preload critical images -->
<link rel="preload" as="image" href="/Refull-App/images/webp/fondoprincipal.webp">
<link rel="preload" as="image" href="/Refull-App/images/webp/logodblanco.webp">

<section id="inicio" class="hero-section py-8 w-full px-8 lg:px-0">
  <!-- Background image with optimized loading -->
  <div class="hero-bg"></div>
  <div class="absolute inset-0 bg-black bg-opacity-50"></div>
  
  <div class="container-custom text-left relative z-10 w-full">
    <div class="flex flex-col items-start mb-8 -ml-16">
      <OptimizedImage 
        src="/Refull-App/images/logodblanco.png" 
        alt="DikuRefull" 
        className="w-56 h-auto"
        loading="eager"
        fetchpriority="high"
        width={224}
        height="auto"
      />
    </div>
    <div class="flex flex-col items-start">
      <h1 class="hero-title text-3xl md:text-6xl font-bold mb-8 text-white">
        Tu conductor al instante
      </h1>
      <a 
          href="https://play.google.com/store" 
          target="_blank" 
          rel="noopener noreferrer"
          class="bg-custom-orange text-white px-6 py-3 rounded-lg font-semibold hover:bg-orange-600 transition-colors duration-200 flex items-center justify-center gap-2 shadow-lg hover:shadow-xl"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
          </svg>
          Descargar App
        </a>
    </div>
  </div>
</section>

<style> 
  .hero-section {
    position: relative;
    height: 85vh;
    min-height: 600px;
  }
  
  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/Refull-App/images/webp/fondoprincipal.webp');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    will-change: transform;
  }
  
  /* Optimize for LCP */
  .hero-section h1 {
    contain: layout style paint;
  }
  
  .hero-section img {
    contain: layout style paint;
  }
  
  /* Fix h1 font-size warning - specify explicit font sizes */
  .hero-title {
    font-size: 1.875rem; /* text-3xl = 30px */
    line-height: 2.25rem; /* leading-9 */
  }
  
  @media (min-width: 768px) {
    .hero-title {
      font-size: 3.75rem; /* text-6xl = 60px */
      line-height: 1;
    }
  }
</style>